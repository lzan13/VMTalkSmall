/* pages/components/dialog/dialog.wxss */

.vm-dialog-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.8);
}

.vm-dialog {
  background: #fff;
  border-radius: 8px;
  margin: 36px;
  padding: 16px;
}

.vm-dialog-title {
  font-size: 16px;
  text-align: center;
  margin-bottom: 16px;
}
