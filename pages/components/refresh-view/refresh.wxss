/* pages/components/refresh-view/index.wxss */

.refresh-view {
  display: flex;
  flex-direction: column;
}

.refresh-view-top {
  position: fixed;
  width: 100%;
  text-align: center;
  z-index: 888;
}

.refresh-icon {
  display: inline-block;
  position: relative;
  width: 0px;
  height: 0px;
  padding: 0px;
  background: #f8f8f8;
  border-radius: 50%;
}

.refresh-icon-normal {
  width: 0px;
  height: 0px;
  padding: 0px;
}

.refresh-icon-pulling {
  width: 24px;
  height: 24px;
  padding: 8px;
  background: #f8f8f8;
  border-radius: 50%;
  box-shadow: 0px 0px 15px #a8a8a8;
  background: transparent url(data:image/png;base64,) no-repeat center;
}

.refresh-icon-refreshing {
  width: 24px;
  height: 24px;
  padding: 8px;
  background: #f8f8f8;
  border-radius: 50%;
  box-shadow: 0px 0px 15px #a8a8a8;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/png;base64,) no-repeat center;
}

.refresh-icon-finish {
  transition: transform 1.5s ease;
}
