/* components/nav/nav.wxss */

/* 顶部导航容器，包含状态栏部分 */

.nav-container {
  position: fixed;
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #fff;
  z-index: 999;
}

/* 导航栏 */

.nav-toolbar {
  display: flex;
  flex-direction: row;
}

/* 导航图标 */

.nav-icon {
  width: 24px;
  height: 24px;
  padding: 12px;
}

.nav-icon:active {
  background: #e8e8e8;
}

.nav-space {
  width: 8px;
  height: 48px;
}

/* 标题 */

.nav-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 280px;
  height: 48px;
  line-height: 48px;
  font-size: 16px;
  font-weight: bold;
  color: #3c3c3c;
}
