/* pages/components/refresh/refresh.wxss */

.refresh-view {
  display: flex;
  flex-direction: column;
}

.refresh-view-top {
  position: fixed;
  width: 100%;
  text-align: center;
  z-index: 99;
}

.refresh-status {
  display: inline-block;
  position: relative;
  width: 20px;
  height: 20px;
  padding: 8px;
  top: -40px;
  background: #f8f8f8;
  border-radius: 50%;
  box-shadow: 0px 0px 15px #d8d8d8;
}

.refresh-icon {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: transparent url(data:image/svg+xml;base64,) no-repeat center;
}

.refresh-refreshing .refresh-icon {
  -webkit-animation: animRefreshingRoate 1s steps(12, end) infinite;
  animation: animRefreshingRoate 1s steps(12, end) infinite;
}


@keyframes animRefreshingRoate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
