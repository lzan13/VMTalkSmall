/* pages/components/refresh/refresh.wxss */

.refresh-view {
  display: flex;
  flex-direction: column;
}

.refresh-view-top {
  position: fixed;
  width: 100%;
  text-align: center;
  z-index: 888;
}

.refresh-status {
  display: inline-block;
  position: relative;
  width: 24px;
  height: 24px;
  padding: 8px;
  background: #f8f8f8;
  border-radius: 50%;
  box-shadow: 0px 0px 20px #d8d8d8;
}

.refresh-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: 100%;
  background: transparent url(data:image/svg+xml;base64,) no-repeat center;
}

.refresh-normal {
  width: 0px;
  height: 0px;
  padding: 0px;
  -webkit-animation: animNormal 260ms 1;
  animation: animNormal 260ms 1;
}

.refresh-pulling {
  -webkit-animation: animPulling 260ms 1;
  animation: animPulling 260ms 1;
}

.refresh-refreshing {
  -webkit-animation: animRefreshing 260ms ease-out 1;
  animation: animRefreshing 260ms ease-out 1;
}

.refresh-refreshing .refresh-icon {
  -webkit-animation: animRefreshingRoate 1s steps(12, end) infinite;
  animation: animRefreshingRoate 1s steps(12, end) infinite;
}

@keyframes animNormal {
  0% {
    top: 50px;
    width: 24px;
    height: 24px;
    box-shadow: 0px 0px 20px #d8d8d8;
  }

  100% {
    top: 0px;
    width: 0px;
    height: 0px;
    box-shadow: 0px 0px 0px #d8d8d8;
  }
}

@keyframes animPulling {
  0% {
    width: 0px;
    height: 0px;
  }

  100% {
    width: 24px;
    height: 24px;
  }
}

@keyframes animRefreshing {
  0% {
    top: 103px;
  }

  100% {
    top: 50px;
  }
}

@keyframes animRefreshingRoate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
