/**index.wxss**/

.talk-container {
  position: fixed;
  display: flex;
  flex-direction: column;
  /* align-items: center; 水平居中 */
  justify-content: center; /*垂直居中*/
  width: 100%;
  height: 100%;
}

.talk-hitokoto-container {
  display: flex;
  flex-direction: column;
  align-items: right;
  padding: 12px;
}

.talk-quote-top, .talk-quote-bottom {
  width: 12px;
  height: 12px;
  margin-top: 4px;
  margin-bottom: 4px;
}

.talk-quote-bottom-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
}

.talk-quote-bottom {
  float: right;
}

.talk-decoration {
  width: 100%;
  height: 1px;
  background: #d8d8d8;
}

.talk-hitokoto {
  font-size: 18px;
  font-weight: bold;
  margin-left: 16px;
  margin-right: 16px;
}

/* 出处  */

.talk-from-container {
  position: fixed;
  bottom: 56px;
  width: 100%;
  justify-content: center;
  background: bisque;
}

.talk-from {
  position: fixed;
  width: 100%;
  text-align: center;
  font-size: 10px;
}

/* 控制部分 */

.control-container {
  position: fixed;
  display: block;
  bottom: 16px;
  right: 16px;
}

.control-icon {
  width: 20px;
  height: 20px;
  padding: 8px;
  border-radius: 50%;
  background: #e8e8e8;
}
