/**index.wxss**/

.talk-container {
  position: fixed;
  display: flex;
  flex-direction: column;
  /* align-items: center; 水平居中 */
  justify-content: center; /*垂直居中*/
  width: 100%;
  height: 100%;
}

.talk-hitokoto-container {
  display: flex;
  flex-direction: column;
  align-items: right;
  padding: 16px;
}

.talk-quote-top, .talk-quote-bottom {
  width: 16px;
  height: 16px;
  margin-top: 4px;
  margin-bottom: 4px;
}

.talk-quote-bottom-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
}

.talk-quote-bottom {
  float: right;
}

.talk-decoration {
  width: 100%;
  height: 1px;
}

.talk-hitokoto {
  font-size: 20px;
  font-weight: bold;
  margin-left: 16px;
  margin-right: 16px;
  text-align: center;
}

/* 出处 */

.talk-from-container {
  position: fixed;
  bottom: 48px;
  width: 100%;
  justify-content: center;
  background: bisque;
}

.talk-from {
  position: fixed;
  width: 100%;
  text-align: center;
  font-size: 10px;
}

/* 控制部分 */

.page-control {
  position: fixed;
  width: 100%;
  height: 100vh;
}

.control-icon {
  width: 24px;
  height: 24px;
  padding: 8px;
  border-radius: 50%;
  background: #f8f8f8;
}

.control-icon:active {
  background: #e8e8e8;
}

.icon-share {
  position: fixed;
  bottom: 16px;
  left: 16px;
}

.icon-setting {
  position: fixed;
  right: 16px;
  bottom: 16px;
}
